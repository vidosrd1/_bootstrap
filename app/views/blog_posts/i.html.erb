<% if @pagy.count > @pagy.items %>
<div class="mt-10">
  <%= pagy_nav(@pagy) %>
</div>
<% end %>

<div id="blog_posts">
  <% @blog_posts.each do |blog_post| %>
    <%= render blog_post %>
    <p>
      <%= link_to "Show this blog post", blog_post %>
    </p>
  <% end %>
</div>
<p style="color: green"><%= notice %></p>

<h1>Blog posts</h1>

<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New novine</h1>
  <%= form_for @novine do |form| %>
  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div style="margin-top:20px">
    <%= form.fields_for :tags do |t| %>
    <div class="form-group row">
      <div class="col-sm-12">
        <%= t.text_field :name,
        class: 'form-control',
        placeholder: 'New category' %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :publish %>
    <%= form.date_field :publish, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.rich_text_area :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div>
    <%= form.label :pictures, style: "display: block" %>
    <%= form.file_field :pictures, multiple: true %>
  </div>
  <%= form.submit %>
<% end %>

  <%= link_to 'Back to novines', novines_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>

<%= form_with(model: novine, class: "contents") do |form| %>
  <% if novine.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-50
    0 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(novine.errors.count, "error") %> prohibited this novine from being saved:</h2>

      <ul>
        <% novine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <p>
    <%= form.label :tag_names %><br />
    <%= form.text_field :tag_names %>
  </p>
  <div>
    <%= tag.taggable.each do |tagging| %>
      <h2>Novine:</h2>
      <%= render 'novines/novine', novine: taggable.novine %>
      <%= link_to "ead More", taggable.novine %>
      <hr />
    <% end %>
    <strong class="block font-medium mb-1">
      Tags:</strong>
      <%= novine.tags.each do |tag| %>
        <%= link_to tag, style: "text-deciration:none" do %>
        <spat class="tag" %>
      <% end %>
  </div>

  <div class="my-5">
    <%= form.label :publish %>
    <%= form.date_field :publish, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.rich_text_area :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div>
    <%= form.label :pictures, style: "display: block" %>
    <%= form.file_field :pictures, multiple: true %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600
    1text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
